<mvc:View
controllerName="sap.ui.demo.todo.controller.App"
xmlns:mvc="sap.ui.core.mvc"
xmlns:core="sap.ui.core"
xmlns="sap.m"
xmlns:f="sap.f"
xmlns:l="sap.ui.layout"
xmlns:form="sap.ui.layout.form"
displayBlock="true">
 
 <App autoFocus="false">
    <Page 
   showHeader="true" 
   backgroundDesign="Solid" 
   enableScrolling="true"   
   class="sapUiContentPadding">
   
<customHeader>
					<f:ShellBar core:require="{ Helper: 'sap/ui/demo/todo/util/Helper' }" 
					title="{i18n>TITLE}"
					 homeIcon="{:= Helper.resolvePath('./img/logo.png') }" />
</customHeader>

   <content>
    
        <VBox width="100%"> 
     
          		<FlexBox
          			justifyContent="Center"
          			alignItems="Center"
          			wrap="Wrap"
          			class="sapUiTinyMarginTopBottom">
          			<items>
          				<core:Fragment fragmentName="sap.ui.demo.todo.view.fragment.InfoCard" type="XML" binding="{view>/cardData/overdue}"/>
          				<core:Fragment fragmentName="sap.ui.demo.todo.view.fragment.InfoCard" type="XML" binding="{view>/cardData/today}"/>
          				<core:Fragment fragmentName="sap.ui.demo.todo.view.fragment.InfoCard" type="XML" binding="{view>/cardData/tomorrow}"/>
          			</items>
          		</FlexBox>     
          <VBox width="100%">
      <Title text="Suas tarefas" level="H2" titleStyle="H3" class="sapUiMediumMarginTop" />
      <Text text="Gerencie o que precisa ser feito usando uma UI clara e eficiente." />
     </VBox>
     
          <FlexBox  
      class="listTask sapUiMediumMarginTopBottom" 
      direction="Column"
      width="100%">
      
      <HBox class="sapUiTinyMarginBottom">    
              <core:Icon src="sap-icon://circle-task" color="blue" class="sapUiTinyMarginEnd"/>
       <Title text="Lista de Tarefas" />
      </HBox>
      
    <FlexBox
    id="myFlexBox"
    alignItems="Center"
    width="100%"
    justifyContent="SpaceBetween"
    class="sapUiTinyMarginBottom containerForm">
       
       <Input
        id="addtaskItemInput"
        class="roundedInput"
        maxLength="200"
        placeholder="O que precisa ser feito?"
        value="{/newTask}">
        <layoutData>
         <FlexItemData growFactor="6" />
        </layoutData>
       </Input>
       
       <Select
        selectedKey="{/newTpPriority}"
        class="roundedInput sapUiSmallMarginBeginEnd">         <core:Item key="" text="Selecione" />
        <core:Item key="B" text="Baixa" />
        <core:Item key="M" text="Média" />
        <core:Item key="A" text="Alta" />
       </Select>
       
       <DatePicker
        id="dateDelivery"
        class="roundedInput sapUiSmallMarginEnd" placeholder="dd/mm/aaaa"
        value="{/dateDelivery}">
        <layoutData>
         <FlexItemData growFactor="2" />
        </layoutData>
       </DatePicker>
       
       <Button
        text="Adicionar"
        icon="sap-icon://add"
        press=".onPress"
        type="Emphasized"
        class="sapUiSmallMarginEnd">
        <layoutData>
         <FlexItemData growFactor="1" />
        </layoutData>
       </Button>
      </FlexBox>
      
      <SegmentedButton selectedKey="all" 
    selectionChange=".onFilter" 
    class="segmentedResponsive sapUiTinyMarginBottom">
  <items>
    <SegmentedButtonItem width="10rem" text="Todos" key="all" id="all"/>
    <SegmentedButtonItem width="10rem" text="Abertos" key="active" id="active"/>
    <SegmentedButtonItem width="10rem" text="Concluídos" key="completed" id="completed"/>
  </items>
</SegmentedButton>

<Select selectedKey="all" 
    class="selectResponsive sapUiTinyMarginBottom"
    change=".onFilter">
    <core:Item key="all" text="Todos"/>
    <core:Item key="active" text="Abertos"/>
    <core:Item key="completed" text="Concluídos"/>
</Select>

            <List
       id="todoList"
       items="{/todos}"
       showSeparators="None"
       mode="None"
       class="containerForm"
       noDataText="Nenhuma tarefa encontrada.">
       
       <CustomListItem type="Inactive" class=" line noFocusItem" >
                <HBox 
         class="sapUiSmallPaddingBeginEnd sapUiSmallMarginTopBottom responsiveFlex"
  alignItems="Center"
  justifyContent="SpaceBetween">
         
         <HBox alignItems="Center">
          <CheckBox selected="{completed}"  class="sapUiTinyMarginEnd"/>
          <Text text="{task}" class="sapUiTinyMarginEnd lisText" wrapping="true"/>
          <core:Fragment
           fragmentName="sap.ui.demo.todo.view.fragment.TpPriority"
           type="XML"/>
         </HBox>
         <HBox alignItems="Center">
          <core:Icon
           src="sap-icon://calendar"
           class="sapUiTinyMarginEnd"
           size="1.5rem"
           color="{iconColor}" />
         <Text 
         text="{
         path: 'date',
        formatter: '.formatDate'
        }"
         wrapping="false"
        class="sapUiSmallMarginBeginEnd lisText" />
          <Button icon="sap-icon://delete" 
          type="Transparent" press=".onDeleteItem"/>
           <Button icon="sap-icon://message-information" 
          type="Transparent" press=".onInfoItem"/>
         </HBox>
        </HBox>
       </CustomListItem>
      </List>
     </FlexBox> 
    </VBox>
   </content>
  </Page>
 </App>
</mvc:View>