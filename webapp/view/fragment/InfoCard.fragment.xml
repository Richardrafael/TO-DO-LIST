<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.f">
	<Panel class="sapUiSmallMarginEnd border-panel sapUiTinyMarginBottom" width="300px">
			<HBox class="sapUiSmallMargin">
				<core:Icon
					src="{view>icon}"
					class="sapUiTinyMarginEnd"
					size="1.5rem"
					color="{view>iconColor}" />
				<VBox>
					<Title text="{view>title}" level="H4" />
					<Title text="{view>number}" titleStyle="H1" />
					<Text text="{view>subtitle}" />
				</VBox>
			</HBox>
	</Panel>
</core:FragmentDefinition>