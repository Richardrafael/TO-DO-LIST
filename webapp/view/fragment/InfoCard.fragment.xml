<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.f">
	<f:Card class="sapUiSmallMarginEnd sapUiTinyMarginBottom" width="300px">
		<f:content>
			<HBox class="sapUiSmallMargin">
				<core:Icon
					src="{icon}"
					class="sapUiTinyMarginEnd"
					size="1.5rem"
					color="{iconColor}" />
				<VBox>
					<Title text="{title}" level="H4" />
					<Title text="{number}" titleStyle="H1" />
					<Text text="{subtitle}" />
				</VBox>
			</HBox>
		</f:content>
	</f:Card>
</core:FragmentDefinition>